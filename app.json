{
  "name": "heroku-telegram-bot-app",
  "stack": "heroku-22",
  "description": "This is an example telegram bot application, which uses R and the heroku-buildpack-r on Heroku.",
  "keywords": [
    "r",
    "telegram",
    "telegram bot",
    "heroku-buildpack-r"
  ],
  "repository": "https://github.com/virtualstaticvoid/heroku-telegram-bot-app",
  "logo": "https://github.com/virtualstaticvoid/heroku-telegram-bot-app/raw/main/logo.png",
  "success_url": "/",
  "formation": {
    "worker": {
      "command": "R --no-save --quiet -s --file=/app/bot.R",
      "quantity": 1
    }
  },
  "buildpacks": [
    {
      "url": "vsv/heroku-buildpack-r"
    }
  ],
  "env": {
    "TELEGRAM_TOKEN": {
      "description": "Telegram bot token. See https://github.com/ebeneditos/telegram.bot#generating-an-access-token"
    }
  }
}
